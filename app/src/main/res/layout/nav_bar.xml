<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_background"
    android:elevation="8dp"
    android:layout_gravity="bottom" >

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home_icon"
            android:contentDescription="Home"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#363636"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_list_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/create_list_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/create_list_icon"
            android:contentDescription="Create List"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/create_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create List"
            android:textColor="#363636"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_list_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my_list_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/my_list_icon"
            android:contentDescription="My List"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/my_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My List"
            android:textColor="#363636"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_store_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/top_store_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/top_store_icon"
            android:contentDescription="My List"
            android:scaleType="fitCenter"/>


        <TextView
            android:id="@+id/top_store_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Store"
            android:textColor="#363636"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/accounts_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/accounts_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/account_icon"
            android:contentDescription="Account"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/accounts_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="#363636"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>